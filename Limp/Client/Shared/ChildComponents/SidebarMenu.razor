@inject NavigationManager _navManager

<div class="bb-page">

    <Sidebar @ref="sidebar"
             CustomIconName="bi bi-file-lock2-fill"
             Title="Three Dollar Chat"
             DataProvider="SidebarDataProvider" />

</div>

@code {
    Sidebar? sidebar;
    IEnumerable<NavItem> navItems;

    private async Task<SidebarDataProviderResult> SidebarDataProvider(SidebarDataProviderRequest request)
    {
        if (navItems is null)
            navItems = GetNavItems();

        return await Task.FromResult(request.ApplyTo(navItems));
    }

    private IEnumerable<NavItem> GetNavItems()
    {
        navItems = new List<NavItem>
        {
            new NavItem { Id = "1", IconName = IconName.ChatFill, IconColor = IconColor.Success, Text = "Chat"},
                new NavItem { Id = "2", Href="/contacts", ParentId = "1", Text = "Contacts", IconName = IconName.PeopleFill },
                new NavItem { Id = "3", Href="/users", ParentId = "1", Text = "Users Online", IconName = IconName.PeopleFill },
            new NavItem { Id = "4", Href="/settings", Text="Settings", IconName = IconName.GearWideConnected },
                new NavItem { Id = "5", ParentId="4", Href="/settings/notifications", Text = "Notifications", IconName = IconName.BellFill},
                new NavItem { Id = "6", ParentId="4", Href="/settings/ui", Text="Appearance", IconName = IconName.PaletteFill },
                new NavItem { Id = "7", ParentId="4", Href="settings/core", Text="Core", IconName = IconName.Box2Fill },
            new NavItem { Id = "8", Href="/", IconName = IconName.InfoCircleFill, Text = "About 3$Chat"},
        };

        return navItems;
    }

    private void ToogleSidebar() => sidebar?.ToggleSidebar();
}