@using ClientServerCommon.Models.Login;

@if (Result.Result == AuthResultType.Fail)
{
    <ResultMessage 
        IsSuccess=false
        MessageText=@Result.Message />
}
else if (Result.Result == AuthResultType.Success)
{
    <ResultMessage 
        IsSuccess=true
        MessageText="Your account has been created. You can login now."/>
}

@code {
    [Parameter]
    public AuthResult Result { get; set; }
}
