<div style="cursor: pointer; @Style" @onclick="()=>OnClickCallback()">
    <div class="user-card @(IsOnline ? "online" : "")">
        <a class="bi bi-person-fill" href="/user/@Username">@Username</a>
    </div>
</div>

@code {
    [Parameter]
    public string Username { get; set; }

    [Parameter]
    public bool IsOnline { get; set; }

    [Parameter]
    public Action OnClickCallback { get; set; }

    [Parameter]
    public string Style { get; set; } = string.Empty;
}
