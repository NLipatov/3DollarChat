<div style="cursor: pointer; @Style" @onclick="()=>OnClickCallback()">
    <div class="item-card @(ItemModel.IsActive ? "active" : "")">
        <div class="header">
            <div class="profile-picture">
                <i class="@IconClass item-icon"></i>
            </div>
            <div>
                <a href="/user/@ItemModel.ItemName" class="username">@ItemModel.ItemName</a>
            </div>
            @if (ItemModel.IsEncryptionSettedUp)
            {
                <div class="key-info">
                    <i class="bi bi-key-fill key-icon" data-bs-toggle="tooltip" title="AES key for secure communication"></i>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string IconClass { get; set; }

    [Parameter]
    public ItemModel ItemModel { get; set; }

    [Parameter]
    public Action OnClickCallback { get; set; }

    [Parameter]
    public string Style { get; set; } = string.Empty;
}
