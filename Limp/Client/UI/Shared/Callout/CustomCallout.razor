<div class="callout @CalloutType.ToString().ToLower()">
    <div class="callout-header">
        <CustomIcon Type="CustomIconType.Solid" Name=@ResolveIconByType()/>
        <span>@CalloutType.ToString()</span>
    </div>
    <h3>@CalloutTitle</h3>
    <div>
        <span>
            @CalloutBody
        </span>
    </div>
</div>

@code {
    [Parameter] public CalloutType CalloutType { get; set; } = CalloutType.Info;
    [Parameter] public string CalloutIconStyle { get; set; } = "fa-solid";
    [Parameter] public string CalloutTitle { get; set; } = string.Empty;
    [Parameter] public string CalloutBody { get; set; } = string.Empty;

    private string ResolveIconByType()
    {
        return CalloutType switch
        {
            CalloutType.Info => "circle-info",
            CalloutType.Idea => "lightbulb",
            CalloutType.Warning => "triangle-exclamation",
            CalloutType.Danger => "circle-exclamation",
            CalloutType.Error => "bug",
            _ => throw new ArgumentException("Unsupported callout type")
        };
    }

}